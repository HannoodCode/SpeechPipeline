# AI Speech Pipeline Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI (for Whisper STT and GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud (for Speech-to-Text and Text-to-Speech)
# Download service account key JSON file and set path
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# ElevenLabs (for premium TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Ollama (local LLM server)
OLLAMA_BASE_URL=http://localhost:11434

# FastAPI Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000 